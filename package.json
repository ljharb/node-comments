{
	"name": "comments",
	"version": "0.3.2",
	"description": "Transform between different comment styles",
	"main": "lib/comments.js",
	"bin": {
		"comments": "bin/cmd.js"
	},
	"preferGlobal": true,
	"scripts": {
		"test": "node test/index.js && npm run coverage-quiet",
		"coverage": "covert test/*.js",
		"coverage-quiet": "covert test/*.js --quiet",
		"lint": "jscs */*.js"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/ljharb/node-comments.git"
	},
	"keywords": [
		"promiseback",
		"comment",
		"comments",
		"html",
		"comments",
		"multiline",
		"//",
		"/*"
	],
	"author": "Jordan Harband",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/node-comments/issues"
	},
	"dependencies": {
		"extend": "~1.3.0",
		"listify": "~0.0.1",
		"literalizer": "~0.4.0",
		"optimist": "~0.6.0",
		"promiseback": "~1.0.0"
	},
	"devDependencies": {
		"tape": "~2.14.0",
		"covert": "~1.0.0",
		"jscs": "~1.5.9"
	},
	"engines": {
		"node": ">= 0.4"
	}
}

